<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert-error">
   	        <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          </div>
        <% end %>

      <h4>Title</h4>
　　　　　<%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <br><%= f.submit 'Update Book',class: "btn btn-primary btn-block" %></br>
        <%= link_to "Show",book_path(@book.id), class: "btn btn-link" %>
        <%= link_to "Back", books_path, class: "btn btn-link" %>
      <% end %>
    </div>
  </div>
</div>