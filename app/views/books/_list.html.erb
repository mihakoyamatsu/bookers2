<h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpeg" %>
  <table class="table table-responsive">
  <tr>
    <th>name</th><td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th><td><%= user.introduction %></td>
  </tr>
  </table>
<div class="row">
      <p><%= link_to "", edit_user_path(user), class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %></p>
</div>



<h2>New book</h2>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(newbook) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title , :size => "30*30" %>

      <h4>Opinion</h4>
      <%= f.text_area :body , :size => "30*30" %>
      <%= f.submit'Create Book', class:"btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
