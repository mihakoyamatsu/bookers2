<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">

    <div class="col-xs-3" >
      <table class="table table-responsive">
<%= render 'books/list', newbook: @newbook, user: @user %>
      </table>
    </div>

    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-responsive">
      <tr>
        <td>
          <%= link_to(user_path(@user.id)) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpeg" %>
            <br><%=@user.name %></br>
          <% end %>
        </td>
        <td><%= link_to @book.title ,book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td>
            <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>"本当に消しますか?" ,class: "btn btn-danger btn-sm "%>
            <% end %>
        </td>
      </tr>
      </table>
    </div>
  </div>
</div>