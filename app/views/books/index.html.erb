<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if @newbook.errors.any? %>
   <div id="error_explanation" class="alert-error">
     <h4><%= @newbook.errors.count %>errors prohibited this obj from being saved:</h4>
     <ul>
       <% @newbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>
   </div>
  <% end %>

<div class="container">
  <div class="row">

    <div class="col-xs-3" >
      <table class="table table-responsive">
        <%= render 'books/list', newbook: @newbook, user: @user %>
      </table>
    </div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-responsive">
        <thead>
          <tr>
            <th></th><th>Title</th><th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to(user_path(@user.id)) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpeg", size:'50Ã—50' %>
                <% end %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
